<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PatientMemberMapper">

    <update id="updateMemberScore" parameterType="com.yh.apoplexy.assist.dmo.patient.member.PatientMemberDmo">
        update t_patient_member set score = score + #{score} where id = #{id}
    </update>

</mapper>